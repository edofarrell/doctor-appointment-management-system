<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >
        <TextView
            android:id="@+id/tv_my_appointment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/tv_fragment_appointment_title"
            android:textSize="@dimen/h4"
            ></TextView>
        <ListView
            android:id="@+id/lst_appointment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_my_appointment"
            ></ListView>
        <ImageView
            android:id="@+id/btn_add_appointment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:layout_margin="@dimen/bottom_margin"
            android:background="@drawable/btn_round"
            android:src="@android:drawable/ic_menu_add"
            ></ImageView>
    </RelativeLayout>
</FrameLayout>